<% @saved_payment_methods.each do |client| %>
  <div class="form-check">
    <input class="form-check-input"
    type="radio"
    name="payment_method"
    id="client"
    value=<%= client.espago_client_id %>
    data-payment-target="paymentMethod"
    data-action="change->payment#updatePaymentMethod">
    <label class="form-check-label" for="iframe">
      **** **** **** <%= client.last4 %> | <%= client.first_name %> <%= client.last_name %> | <%= client.company %>
    </label>
  </div>
<% end %>
<hr>
<div class="form-check">
  <input class="form-check-input"
    type="radio"
    name="payment_method"
    id="secure_web_page"
    value="secure_web_page"
    data-payment-target="paymentMethod"
    data-action="change->payment#updatePaymentMethod" checked>
  <label class="form-check-label" for="secure_web_page">
    Secure Web Page
  </label>
</div>
<div class="form-check">
  <input class="form-check-input"
    type="radio"
    name="payment_method"
    id="iframe"
    value="iframe"
    data-payment-target="paymentMethod"
    data-action="change->payment#updatePaymentMethod">
  <label class="form-check-label" for="iframe">
    iFrame
  </label>
</div>
<div class="form-check">
  <input class="form-check-input"
    type="radio"
    name="payment_method"
    id="iframe3"
    value="iframe3"
    data-payment-target="paymentMethod"
    data-action="change->payment#updatePaymentMethod">
  <label class="form-check-label" for="iframe3">
    iFrame 3.0
  </label>
</div>
<div class="mt-4">
  <div
    data-controller="google-pay"
    data-google-pay-amount-value="<%= @payable.amount %>"
  >
  </div>
  <div id="apple-pay-button"
    data-controller="apple-pay"
  ></div>
</div>
<hr>
<div class="form-check form-switch">
  <input class="form-check-input"
  type="checkbox"
  role="switch"
  id="save_payment_method"
  data-payment-target="saveCard"
  data-action="change->payment#updateSaveCard">
  <label class="form-check-label" for="save_payment_method">Save card information for future payments</label>
</div>