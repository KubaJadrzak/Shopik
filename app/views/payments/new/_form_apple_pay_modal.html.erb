<div class="modal fade" id="applePayModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center">
      <div class="modal-header justify-content-center border-0">
        <h5 class="modal-title fw-bold">Apple Pay Simulation</h5>
      </div>
      <div class="modal-body">
        <p class="fw-semibold mb-2">Shopik</p>
        <div class="d-flex justify-content-between mb-2">
          <span>Item Total</span>
          <span><%= number_to_currency(@payable.amount) %></span>
        </div>
        <div class="d-flex justify-content-between mb-2">
          <span>Shipping</span>
          <span>Free</span>
        </div>
        <hr>
        <div class="d-flex justify-content-between fw-bold mb-2">
          <span>Total</span>
          <span><%= number_to_currency(@payable.amount) %></span>
        </div>
        <p class="text-muted small mb-4">
          This is a sandbox environment
        </p>
        <div class="apple-pay-modal-button"></div>
      </div>
      <div class="modal-footer justify-content-center border-0">
        <button type="button" class="btn btn-link text-decoration-none" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
