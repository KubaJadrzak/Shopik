<div class="col-lg-6 col-xl-4">
  <div class="card mb-4" style="height: 360px">
    <img src="<%= image_url('default_product_image.svg') %>"
               alt="<%= product.title %>"
               style="height: 160px; object-fit: contain;">
    <div class="card-body">
      <h6 class="card-title"><%= product.title %></h6>
      <p class="card-text"><%= truncate(product.description, length: 120) %></p>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <% if current_user&.active_subscription? && product.membership_price.present? %>
        <span>
          <strong>Membership price: <%= number_to_currency(product.membership_price) %></strong>
        </span>
      <% else %>
        <span><strong>Price: <%= number_to_currency(product.price) %></strong></span>
      <% end %>
      <%= button_to add_to_cart_path(product), method: :post, class: "btn btn-primary btn-sm" do %>
        <i class="bi bi-cart-plus"></i> Add to Cart
      <% end %>
    </div>
  </div>
</div>