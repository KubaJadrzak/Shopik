<div class="col-sl-12 col-md-6 col-lg-4" data-testid="product">
  <div class="card mb-4" style="min-height: 360px;">
    <img src="<%= image_url('default_product_image.svg') %>"
               class="card-img-top"
               alt="<%= product.title %>"
               style="height: 180px; object-fit: contain;">
    <div class="card-body">
      <h6 class="card-title"><%= product.title %></h6>
      <p class="card-text" style="font-size: 0.9rem;"><%= truncate(product.description, length: 128) %></p>
    </div>
    <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
      <% if current_user&.active_subscription? && product.membership_price.present? %>
        <span><strong>Membership price: <%= number_to_currency(product.membership_price) %></strong></span>
      <% else %>
        <span><strong>Price: <%= number_to_currency(product.price) %></strong></span>
      <% end %>
      <%= button_to add_to_cart_path(product), method: :post, class: "btn btn-primary btn-sm" do %>
        <i class="bi bi-cart-plus"></i> Add to Cart
      <% end %>
    </div>
  </div>
</div>