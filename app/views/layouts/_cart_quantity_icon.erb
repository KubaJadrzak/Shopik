<%= turbo_frame_tag "cart-quantity" do %>
  <% if current_user&.cart %>
    <% cart_count = current_user.cart_quantity %>
    <% if cart_count > 0 %>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        <%= cart_count %>
      </span>
    <% end %>
  <% end %>
<% end %>