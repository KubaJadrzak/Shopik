<h3>Your Cart</h3>
<% if @cart.cart_items.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "cart_item", collection: @cart.cart_items %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <%= render 'carts/total_price', price: @cart.total_price  %>
    <%= link_to new_order_path, class: "btn btn-primary" do %>
      Place Order
    <% end %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
