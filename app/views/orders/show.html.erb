<%= turbo_stream_from @order %>
<div class="container mt-4">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
    <h3><%= @order.order_number %></h3>
    <div class="d-flex align-items-center">
      <%= link_to "Back to Orders", account_path(anchor: 'orders'), class: "btn btn-primary me-2" %>
      <% if @order.can_retry_payment? %>
        <%= button_to "Retry Payment", retry_order_payment_order_path(@order), method: :post, class: "btn btn-success", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-12 mb-4">
      <div class="card shadow-sm border-light">
        <div class="card-body">
          <h5 class="card-title mb-3">Order Details</h5>
          <div class="row">
            <div class="col-12">
              <%= render "order_statuses", order: @order %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6 d-flex justify-content-between align-items-center">
              <strong>Shipping Address:</strong>
              <%= @order.shipping_address %>
            </div>
            <div class="col-md-6 d-flex justify-content-between align-items-center">
              <strong>Ordered At:</strong>
              <%= @order.ordered_at.strftime("%b %e, %Y %l:%M %p") %>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light">
          <h6><strong>Order Items:</strong></h6>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.product.title %></td>
                  <td><%= number_to_currency(order_item.price_at_purchase) %></td>
                  <td><%= order_item.quantity %></td>
                  <td><%= number_to_currency(order_item.total_price) %></td>
                </tr>
              <% end %>
              <tr>
                <td><b>Total</b></td>
                <td></td>
                <td></td>
                <td><b><%= number_to_currency(@order.total_price) %></b></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: 'payments/payment', locals: { payments: @payments } %>
